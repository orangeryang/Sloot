model Battle {
  id       Int      @id @default(autoincrement())
  attacker String
  defender String
  winner   Int      @default(-1)
  createAt DateTime @default(now()) @map("created_at")
  updateAt DateTime @default(now()) @updatedAt() @map("updated_at")
}

model BattleDetail {
  id       Int      @id @default(autoincrement())
  battleId Int      @map("battle_id")
  order    Int
  random   Int
  createAt DateTime @default(now()) @map("created_at")
  updateAt DateTime @default(now()) @updatedAt() @map("updated_at")
}


